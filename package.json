{
  "name": "e2e-tester",
  "version": "1.0.0",
  "description": "E2E testing application with React frontend, Express backend, and Playwright testing",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "test": "npm run verify && playwright test",
    "test:headed": "npm run verify && playwright test --headed",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "verify": "./scripts/local-health-check.sh",
    "start:local": "./run-local.sh",
    "start:backend:local": "./run-backend-local.sh",
    "start:frontend:local": "./run-frontend-local.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "concurrently": "^8.2.2"
  }
}
